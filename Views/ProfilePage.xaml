<?xml version="1.0" encoding="utf-8" ?>
<views:BasePage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:AcuPuntos.Views"
             xmlns:viewmodels="clr-namespace:AcuPuntos.ViewModels"
             x:Class="AcuPuntos.Views.ProfilePage"
             x:DataType="viewmodels:ProfileViewModel"
             Title="{Binding Title}"
             BackgroundColor="#F5F5F5">

    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="20">

            <!-- Foto de perfil y nombre -->
            <Border Style="{StaticResource CardFrame}"
                   BackgroundColor="#3498DB"
                   Padding="30">
                <VerticalStackLayout Spacing="15">
                    
                    <Label Text="ðŸ‘¤"
                           FontSize="80"
                           HorizontalOptions="Center"/>

                    <Label Text="{Binding CurrentUser.DisplayName}"
                           TextColor="White"
                           FontSize="24"
                           FontAttributes="Bold"
                           HorizontalOptions="Center"
                           HorizontalTextAlignment="Center"/>

                    <Label Text="{Binding CurrentUser.Email}"
                           TextColor="White"
                           FontSize="14"
                           Opacity="0.9"
                           HorizontalOptions="Center"
                           HorizontalTextAlignment="Center"/>

                    <!-- Rol -->
                    <Border Padding="10,5"
                           StrokeShape="RoundRectangle 15"
                           BackgroundColor="White"
                           HorizontalOptions="Center">
                        <Label Text="{Binding CurrentUser.Role}"
                               TextColor="#3498DB"
                               FontSize="14"
                               FontAttributes="Bold"/>
                    </Border>

                </VerticalStackLayout>
            </Border>

            <!-- Puntos actuales -->
            <Border Style="{StaticResource CardFrame}"
                   BackgroundColor="#2ECC71"
                   Padding="20">
                <Grid ColumnDefinitions="*,Auto">
                    <VerticalStackLayout>
                        <Label Text="Puntos Disponibles"
                               TextColor="White"
                               FontSize="16"
                               Opacity="0.9"/>
                        <Label Text="{Binding CurrentUser.Points, StringFormat='{0:N0}'}"
                               TextColor="White"
                               FontSize="36"
                               FontAttributes="Bold"/>
                    </VerticalStackLayout>
                    <Label Grid.Column="1"
                           Text="ðŸ’°"
                           FontSize="60"
                           VerticalOptions="Center"/>
                </Grid>
            </Border>

            <!-- GamificaciÃ³n -->
            <Border Style="{StaticResource CardFrame}">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#9B59B6" Offset="0.0"/>
                        <GradientStop Color="#8E44AD" Offset="1.0"/>
                    </LinearGradientBrush>
                </Border.Background>
                <VerticalStackLayout Spacing="15" Padding="10">

                    <Label Text="ðŸ† Tu Progreso"
                           FontSize="20"
                           FontAttributes="Bold"
                           TextColor="White"/>

                    <Grid ColumnDefinitions="*,*" ColumnSpacing="15">
                        <!-- Nivel -->
                        <VerticalStackLayout Spacing="5">
                            <Label Text="Nivel"
                                   TextColor="White"
                                   FontSize="14"
                                   Opacity="0.9"/>
                            <Label Text="{Binding CurrentUser.Level}"
                                   TextColor="White"
                                   FontSize="36"
                                   FontAttributes="Bold"/>
                        </VerticalStackLayout>

                        <!-- Experiencia -->
                        <VerticalStackLayout Grid.Column="1" Spacing="5">
                            <Label Text="Experiencia"
                                   TextColor="White"
                                   FontSize="14"
                                   Opacity="0.9"/>
                            <Label Text="{Binding CurrentUser.Experience, StringFormat='{0} XP'}"
                                   TextColor="White"
                                   FontSize="36"
                                   FontAttributes="Bold"/>
                        </VerticalStackLayout>
                    </Grid>

                    <!-- Racha -->
                    <Border BackgroundColor="#FFFFFF20"
                           Padding="15"
                           StrokeShape="RoundRectangle 12">
                        <HorizontalStackLayout Spacing="10">
                            <Label Text="ðŸ”¥"
                                   FontSize="28"
                                   VerticalOptions="Center"/>
                            <VerticalStackLayout Spacing="2">
                                <Label Text="{Binding CurrentUser.ConsecutiveDays, StringFormat='{0} dÃ­as consecutivos'}"
                                       TextColor="White"
                                       FontSize="16"
                                       FontAttributes="Bold"/>
                                <Label Text="Sigue tu racha diaria"
                                       TextColor="White"
                                       FontSize="12"
                                       Opacity="0.8"/>
                            </VerticalStackLayout>
                        </HorizontalStackLayout>
                    </Border>

                </VerticalStackLayout>
            </Border>

            <!-- Badges Ganados -->
            <VerticalStackLayout Spacing="10">
                <Grid ColumnDefinitions="*,Auto">
                    <Label Text="ðŸŽ–ï¸ Mis Badges"
                           FontSize="20"
                           FontAttributes="Bold"
                           TextColor="#333333"/>
                    <Label Grid.Column="1"
                           Text="{Binding BadgesCount, StringFormat='{0} ganados'}"
                           FontSize="14"
                           TextColor="#666666"
                           VerticalOptions="Center"/>
                </Grid>

                <!-- Lista de badges -->
                <Border Style="{StaticResource CardFrame}"
                       IsVisible="{Binding HasBadges}"
                       Padding="10">
                    <CollectionView ItemsSource="{Binding UserBadges}"
                                  SelectionMode="None">
                        <CollectionView.ItemsLayout>
                            <GridItemsLayout Orientation="Vertical"
                                           Span="3"
                                           HorizontalItemSpacing="10"
                                           VerticalItemSpacing="10"/>
                        </CollectionView.ItemsLayout>
                        <CollectionView.ItemTemplate>
                            <DataTemplate x:DataType="models:UserBadge">
                                <Border BackgroundColor="#F5F5F5"
                                       Padding="10"
                                       StrokeShape="RoundRectangle 10">
                                    <VerticalStackLayout Spacing="5">
                                        <Label Text="{Binding Badge.Icon}"
                                               FontSize="40"
                                               HorizontalOptions="Center"/>
                                        <Label Text="{Binding Badge.Name}"
                                               FontSize="10"
                                               FontAttributes="Bold"
                                               TextColor="#333333"
                                               HorizontalOptions="Center"
                                               HorizontalTextAlignment="Center"
                                               LineBreakMode="WordWrap"
                                               MaxLines="2"/>
                                    </VerticalStackLayout>
                                </Border>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </Border>

                <!-- Sin badges -->
                <Border Style="{StaticResource CardFrame}"
                       IsVisible="{Binding HasBadges, Converter={StaticResource InvertedBoolConverter}}"
                       Padding="30">
                    <VerticalStackLayout Spacing="10">
                        <Label Text="ðŸŽ–ï¸"
                               FontSize="50"
                               HorizontalOptions="Center"
                               Opacity="0.5"/>
                        <Label Text="AÃºn no tienes badges"
                               FontSize="16"
                               TextColor="#666666"
                               HorizontalOptions="Center"/>
                        <Label Text="Completa acciones para ganar insignias"
                               FontSize="14"
                               TextColor="#999999"
                               HorizontalOptions="Center"
                               HorizontalTextAlignment="Center"/>
                    </VerticalStackLayout>
                </Border>
            </VerticalStackLayout>

            <!-- EstadÃ­sticas -->
            <Border Style="{StaticResource CardFrame}"
                   Padding="20">
                <VerticalStackLayout Spacing="15">
                    
                    <Label Text="ðŸ“Š EstadÃ­sticas"
                           FontSize="20"
                           FontAttributes="Bold"
                           TextColor="#333333"/>

                    <Grid RowDefinitions="Auto,Auto"
                          ColumnDefinitions="*,*"
                          RowSpacing="15"
                          ColumnSpacing="15">

                        <!-- Transacciones -->
                        <Border Grid.Row="0" Grid.Column="0"
                               BackgroundColor="#E8F5E9"
                               Padding="15"
                               StrokeShape="RoundRectangle 15">
                            <VerticalStackLayout Spacing="5">
                                <Label Text="ðŸ“"
                                       FontSize="30"
                                       HorizontalOptions="Center"/>
                                <Label Text="Transacciones"
                                       FontSize="12"
                                       TextColor="#666666"
                                       HorizontalOptions="Center"/>
                                <Label Text="{Binding TotalTransactions}"
                                       FontSize="24"
                                       FontAttributes="Bold"
                                       TextColor="#2ECC71"
                                       HorizontalOptions="Center"/>
                            </VerticalStackLayout>
                        </Border>

                        <!-- Canjes -->
                        <Border Grid.Row="0" Grid.Column="1"
                               BackgroundColor="#FFF3E0"
                               Padding="15"
                               StrokeShape="RoundRectangle 15">
                            <VerticalStackLayout Spacing="5">
                                <Label Text="ðŸŽ"
                                       FontSize="30"
                                       HorizontalOptions="Center"/>
                                <Label Text="Canjes"
                                       FontSize="12"
                                       TextColor="#666666"
                                       HorizontalOptions="Center"/>
                                <Label Text="{Binding TotalRedemptions}"
                                       FontSize="24"
                                       FontAttributes="Bold"
                                       TextColor="#F39C12"
                                       HorizontalOptions="Center"/>
                            </VerticalStackLayout>
                        </Border>

                        <!-- Puntos ganados -->
                        <Border Grid.Row="1" Grid.Column="0"
                               BackgroundColor="#E3F2FD"
                               Padding="15"
                               StrokeShape="RoundRectangle 15">
                            <VerticalStackLayout Spacing="5">
                                <Label Text="ðŸ“ˆ"
                                       FontSize="30"
                                       HorizontalOptions="Center"/>
                                <Label Text="Ganados"
                                       FontSize="12"
                                       TextColor="#666666"
                                       HorizontalOptions="Center"/>
                                <Label Text="{Binding TotalPointsEarned, StringFormat='{0:N0}'}"
                                       FontSize="24"
                                       FontAttributes="Bold"
                                       TextColor="#3498DB"
                                       HorizontalOptions="Center"/>
                            </VerticalStackLayout>
                        </Border>

                        <!-- Puntos gastados -->
                        <Border Grid.Row="1" Grid.Column="1"
                               BackgroundColor="#FFEBEE"
                               Padding="15"
                               StrokeShape="RoundRectangle 15">
                            <VerticalStackLayout Spacing="5">
                                <Label Text="ðŸ“‰"
                                       FontSize="30"
                                       HorizontalOptions="Center"/>
                                <Label Text="Gastados"
                                       FontSize="12"
                                       TextColor="#666666"
                                       HorizontalOptions="Center"/>
                                <Label Text="{Binding TotalPointsSpent, StringFormat='{0:N0}'}"
                                       FontSize="24"
                                       FontAttributes="Bold"
                                       TextColor="#E74C3C"
                                       HorizontalOptions="Center"/>
                            </VerticalStackLayout>
                        </Border>

                    </Grid>

                </VerticalStackLayout>
            </Border>

            <!-- InformaciÃ³n de cuenta -->
            <Border Style="{StaticResource CardFrame}"
                   Padding="20">
                <VerticalStackLayout Spacing="15">
                    
                    <Label Text="â„¹ï¸ InformaciÃ³n de Cuenta"
                           FontSize="20"
                           FontAttributes="Bold"
                           TextColor="#333333"/>

                    <HorizontalStackLayout Spacing="10">
                        <Label Text="Miembro desde:"
                               FontSize="14"
                               TextColor="#666666"
                               VerticalOptions="Center"/>
                        <Label Text="{Binding CurrentUser.CreatedAt, StringFormat='{0:dd/MM/yyyy}'}"
                               FontSize="14"
                               FontAttributes="Bold"
                               TextColor="#333333"
                               VerticalOptions="Center"/>
                    </HorizontalStackLayout>

                    <HorizontalStackLayout Spacing="10">
                        <Label Text="UID:"
                               FontSize="12"
                               TextColor="#999999"
                               VerticalOptions="Center"/>
                        <Label Text="{Binding CurrentUser.Uid}"
                               FontSize="12"
                               TextColor="#999999"
                               VerticalOptions="Center"
                               LineBreakMode="TailTruncation"
                               HorizontalOptions="FillAndExpand"/>
                    </HorizontalStackLayout>

                </VerticalStackLayout>
            </Border>

            <!-- Botones de acciÃ³n -->
            <Button Text="âœï¸ Editar Perfil"
                    Command="{Binding EditProfileCommand}"
                    BackgroundColor="#3498DB"
                    TextColor="White"
                    FontAttributes="Bold"
                    HeightRequest="50"
                    CornerRadius="25"/>

            <Button Text="ðŸ”„ Actualizar"
                    Command="{Binding RefreshProfileCommand}"
                    BackgroundColor="#95A5A6"
                    TextColor="White"
                    FontAttributes="Bold"
                    HeightRequest="50"
                    CornerRadius="25"/>

            <Button Text="ðŸšª Cerrar SesiÃ³n"
                    Command="{Binding LogoutCommand}"
                    BackgroundColor="#E74C3C"
                    TextColor="White"
                    FontAttributes="Bold"
                    HeightRequest="50"
                    CornerRadius="25"
                    Margin="0,0,0,20"/>

        </VerticalStackLayout>
    </ScrollView>
</views:BasePage>
