<?xml version="1.0" encoding="utf-8" ?>
<views:BasePage
    BackgroundColor="{StaticResource Light}"
    Title="{Binding Title}"
    x:Class="AcuPuntos.Views.ProfilePage"
    x:DataType="viewmodels:ProfileViewModel"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:models="clr-namespace:AcuPuntos.Models"
    xmlns:viewmodels="clr-namespace:AcuPuntos.ViewModels"
    xmlns:views="clr-namespace:AcuPuntos.Views"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <!--  Foto de perfil y nombre  -->
            <Border
                BackgroundColor="{StaticResource Primary}"
                Padding="30"
                Style="{StaticResource CardFrame}">
                <VerticalStackLayout Spacing="15">

                    <!--  Foto de perfil circular  -->
                    <Border
                        BackgroundColor="White"
                        HeightRequest="100"
                        HorizontalOptions="Center"
                        StrokeShape="RoundRectangle 50"
                        StrokeThickness="3"
                        WidthRequest="100">
                        <Image
                            Aspect="AspectFill"
                            Source="{Binding CurrentUser.PhotoUrl, TargetNullValue='user_placeholder.svg', FallbackValue='user_placeholder.svg'}" />
                    </Border>

                    <Label
                        FontAttributes="Bold"
                        FontSize="24"
                        HorizontalOptions="Center"
                        HorizontalTextAlignment="Center"
                        Text="{Binding CurrentUser.DisplayName}"
                        TextColor="White" />

                    <Label
                        FontSize="14"
                        HorizontalOptions="Center"
                        HorizontalTextAlignment="Center"
                        Opacity="0.9"
                        Text="{Binding CurrentUser.Email}"
                        TextColor="White" />

                    <!--  Rol  -->
                    <Border
                        BackgroundColor="White"
                        HorizontalOptions="Center"
                        Padding="10,5"
                        StrokeShape="RoundRectangle 15">
                        <Label
                            FontAttributes="Bold"
                            FontSize="14"
                            Text="{Binding CurrentUser.Role}"
                            TextColor="{StaticResource Primary}" />
                    </Border>

                </VerticalStackLayout>
            </Border>

            <!--  Puntos actuales  -->
            <Border
                BackgroundColor="{StaticResource PrimaryDark}"
                Padding="20"
                Style="{StaticResource CardFrame}">
                <Grid ColumnDefinitions="*,Auto">
                    <VerticalStackLayout>
                        <Label
                            FontSize="16"
                            Opacity="0.9"
                            Text="Puntos Disponibles"
                            TextColor="White" />
                        <Label
                            FontAttributes="Bold"
                            FontSize="36"
                            Text="{Binding CurrentUser.Points, StringFormat='{0:N0}'}"
                            TextColor="White" />
                    </VerticalStackLayout>
                    <Label
                        FontSize="60"
                        Grid.Column="1"
                        Text="ðŸ’°"
                        VerticalOptions="Center" />
                </Grid>
            </Border>

            <!--  GamificaciÃ³n  -->
            <Border Style="{StaticResource CardFrame}">
                <Border.Background>
                    <LinearGradientBrush EndPoint="1,1" StartPoint="0,0">
                        <GradientStop Color="{StaticResource Primary}" Offset="0.0" />
                        <GradientStop Color="{StaticResource PrimaryDark}" Offset="1.0" />
                    </LinearGradientBrush>
                </Border.Background>
                <VerticalStackLayout Padding="10" Spacing="15">

                    <Label
                        FontAttributes="Bold"
                        FontSize="20"
                        Text="ðŸ† Tu Progreso"
                        TextColor="White" />

                    <Grid ColumnDefinitions="*,*" ColumnSpacing="15">
                        <!--  Nivel  -->
                        <VerticalStackLayout Spacing="5">
                            <Label
                                FontSize="14"
                                Opacity="0.9"
                                Text="Nivel"
                                TextColor="White" />
                            <Label
                                FontAttributes="Bold"
                                FontSize="36"
                                Text="{Binding CurrentUser.Level}"
                                TextColor="White" />
                        </VerticalStackLayout>

                        <!--  Experiencia  -->
                        <VerticalStackLayout Grid.Column="1" Spacing="5">
                            <Label
                                FontSize="14"
                                Opacity="0.9"
                                Text="Experiencia"
                                TextColor="White" />
                            <Label
                                FontAttributes="Bold"
                                FontSize="36"
                                Text="{Binding CurrentUser.Experience, StringFormat='{0} XP'}"
                                TextColor="White" />
                        </VerticalStackLayout>
                    </Grid>

                    <!--  Racha  -->
                    <Border
                        BackgroundColor="#FFFFFF20"
                        Padding="15"
                        StrokeShape="RoundRectangle 12">
                        <HorizontalStackLayout Spacing="10">
                            <Label
                                FontSize="28"
                                Text="ðŸ”¥"
                                VerticalOptions="Center" />
                            <VerticalStackLayout Spacing="2">
                                <Label
                                    FontAttributes="Bold"
                                    FontSize="16"
                                    Text="{Binding CurrentUser.ConsecutiveDays, StringFormat='{0} dÃ­as consecutivos'}"
                                    TextColor="White" />
                                <Label
                                    FontSize="12"
                                    Opacity="0.8"
                                    Text="Sigue tu racha diaria"
                                    TextColor="White" />
                            </VerticalStackLayout>
                        </HorizontalStackLayout>
                    </Border>

                </VerticalStackLayout>
            </Border>

            <!--  Badges Ganados  -->
            <VerticalStackLayout Spacing="10">
                <Grid ColumnDefinitions="*,Auto">
                    <Label
                        FontAttributes="Bold"
                        FontSize="20"
                        Text="ðŸŽ–ï¸ Mis Badges"
                        TextColor="{StaticResource Dark}" />
                    <Label
                        FontSize="14"
                        Grid.Column="1"
                        Text="{Binding BadgesCount, StringFormat='{0} ganados'}"
                        TextColor="{StaticResource Gray}"
                        VerticalOptions="Center" />
                </Grid>

                <!--  Lista de badges  -->
                <Border
                    IsVisible="{Binding HasBadges}"
                    Padding="10"
                    Style="{StaticResource CardFrame}">
                    <CollectionView ItemsSource="{Binding UserBadges}" SelectionMode="None">
                        <CollectionView.ItemsLayout>
                            <GridItemsLayout
                                HorizontalItemSpacing="10"
                                Orientation="Vertical"
                                Span="3"
                                VerticalItemSpacing="10" />
                        </CollectionView.ItemsLayout>
                        <CollectionView.ItemTemplate>
                            <DataTemplate x:DataType="models:UserBadge">
                                <Border
                                    BackgroundColor="{StaticResource Gray100}"
                                    Padding="10"
                                    StrokeShape="RoundRectangle 10">
                                    <VerticalStackLayout Spacing="5">
                                        <Label
                                            FontSize="40"
                                            HorizontalOptions="Center"
                                            Text="{Binding Badge.Icon}" />
                                        <Label
                                            FontAttributes="Bold"
                                            FontSize="10"
                                            HorizontalOptions="Center"
                                            HorizontalTextAlignment="Center"
                                            LineBreakMode="WordWrap"
                                            MaxLines="2"
                                            Text="{Binding Badge.Name}"
                                            TextColor="{StaticResource Dark}" />
                                    </VerticalStackLayout>
                                </Border>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </Border>

                <!--  Sin badges  -->
                <Border
                    IsVisible="{Binding HasBadges, Converter={StaticResource InvertedBoolConverter}}"
                    Padding="30"
                    Style="{StaticResource CardFrame}">
                    <VerticalStackLayout Spacing="10">
                        <Label
                            FontSize="50"
                            HorizontalOptions="Center"
                            Opacity="0.5"
                            Text="ðŸŽ–ï¸" />
                        <Label
                            FontSize="16"
                            HorizontalOptions="Center"
                            Text="AÃºn no tienes badges"
                            TextColor="{StaticResource Gray}" />
                        <Label
                            FontSize="14"
                            HorizontalOptions="Center"
                            HorizontalTextAlignment="Center"
                            Text="Completa acciones para ganar insignias"
                            TextColor="{StaticResource Gray400}" />
                    </VerticalStackLayout>
                </Border>
            </VerticalStackLayout>

            <!--  EstadÃ­sticas  -->
            <Border Padding="20" Style="{StaticResource CardFrame}">
                <VerticalStackLayout Spacing="15">

                    <Label
                        FontAttributes="Bold"
                        FontSize="20"
                        Text="ðŸ“Š EstadÃ­sticas"
                        TextColor="{StaticResource Dark}" />

                    <Grid
                        ColumnDefinitions="*,*"
                        ColumnSpacing="15"
                        RowDefinitions="Auto,Auto"
                        RowSpacing="15">

                        <!--  Transacciones  -->
                        <Border
                            BackgroundColor="{StaticResource Gray100}"
                            Grid.Column="0"
                            Grid.Row="0"
                            Padding="15"
                            StrokeShape="RoundRectangle 15">
                            <VerticalStackLayout Spacing="5">
                                <Label
                                    FontSize="30"
                                    HorizontalOptions="Center"
                                    Text="ðŸ“" />
                                <Label
                                    FontSize="12"
                                    HorizontalOptions="Center"
                                    Text="Transacciones"
                                    TextColor="{StaticResource Gray}" />
                                <Label
                                    FontAttributes="Bold"
                                    FontSize="24"
                                    HorizontalOptions="Center"
                                    Text="{Binding TotalTransactions}"
                                    TextColor="{StaticResource Primary}" />
                            </VerticalStackLayout>
                        </Border>

                        <!--  Canjes  -->
                        <Border
                            BackgroundColor="{StaticResource Gray100}"
                            Grid.Column="1"
                            Grid.Row="0"
                            Padding="15"
                            StrokeShape="RoundRectangle 15">
                            <VerticalStackLayout Spacing="5">
                                <Label
                                    FontSize="30"
                                    HorizontalOptions="Center"
                                    Text="ðŸŽ" />
                                <Label
                                    FontSize="12"
                                    HorizontalOptions="Center"
                                    Text="Canjes"
                                    TextColor="{StaticResource Gray}" />
                                <Label
                                    FontAttributes="Bold"
                                    FontSize="24"
                                    HorizontalOptions="Center"
                                    Text="{Binding TotalRedemptions}"
                                    TextColor="{StaticResource Warning}" />
                            </VerticalStackLayout>
                        </Border>

                        <!--  Puntos ganados  -->
                        <Border
                            BackgroundColor="{StaticResource Gray100}"
                            Grid.Column="0"
                            Grid.Row="1"
                            Padding="15"
                            StrokeShape="RoundRectangle 15">
                            <VerticalStackLayout Spacing="5">
                                <Label
                                    FontSize="30"
                                    HorizontalOptions="Center"
                                    Text="ðŸ“ˆ" />
                                <Label
                                    FontSize="12"
                                    HorizontalOptions="Center"
                                    Text="Ganados"
                                    TextColor="{StaticResource Gray}" />
                                <Label
                                    FontAttributes="Bold"
                                    FontSize="24"
                                    HorizontalOptions="Center"
                                    Text="{Binding TotalPointsEarned, StringFormat='{0:N0}'}"
                                    TextColor="{StaticResource Success}" />
                            </VerticalStackLayout>
                        </Border>

                        <!--  Puntos gastados  -->
                        <Border
                            BackgroundColor="{StaticResource Gray100}"
                            Grid.Column="1"
                            Grid.Row="1"
                            Padding="15"
                            StrokeShape="RoundRectangle 15">
                            <VerticalStackLayout Spacing="5">
                                <Label
                                    FontSize="30"
                                    HorizontalOptions="Center"
                                    Text="ðŸ“‰" />
                                <Label
                                    FontSize="12"
                                    HorizontalOptions="Center"
                                    Text="Gastados"
                                    TextColor="{StaticResource Gray}" />
                                <Label
                                    FontAttributes="Bold"
                                    FontSize="24"
                                    HorizontalOptions="Center"
                                    Text="{Binding TotalPointsSpent, StringFormat='{0:N0}'}"
                                    TextColor="{StaticResource Danger}" />
                            </VerticalStackLayout>
                        </Border>

                    </Grid>

                </VerticalStackLayout>
            </Border>

            <!--  InformaciÃ³n de cuenta  -->
            <Border Padding="20" Style="{StaticResource CardFrame}">
                <VerticalStackLayout Spacing="15">

                    <Label
                        FontAttributes="Bold"
                        FontSize="20"
                        Text="â„¹ï¸ InformaciÃ³n de Cuenta"
                        TextColor="{StaticResource Dark}" />

                    <HorizontalStackLayout Spacing="10">
                        <Label
                            FontSize="14"
                            Text="Miembro desde:"
                            TextColor="{StaticResource Gray}"
                            VerticalOptions="Center" />
                        <Label
                            FontAttributes="Bold"
                            FontSize="14"
                            Text="{Binding CurrentUser.CreatedAt, StringFormat='{0:dd/MM/yyyy}'}"
                            TextColor="{StaticResource Dark}"
                            VerticalOptions="Center" />
                    </HorizontalStackLayout>

                    <HorizontalStackLayout Spacing="10">
                        <Label
                            FontSize="12"
                            Text="UID:"
                            TextColor="{StaticResource Gray400}"
                            VerticalOptions="Center" />
                        <Label
                            FontSize="12"
                            HorizontalOptions="FillAndExpand"
                            LineBreakMode="TailTruncation"
                            Text="{Binding CurrentUser.Uid}"
                            TextColor="{StaticResource Gray400}"
                            VerticalOptions="Center" />
                    </HorizontalStackLayout>

                </VerticalStackLayout>
            </Border>

            <!--  Botones de acciÃ³n  -->
            <Button
                BackgroundColor="{StaticResource Secondary}"
                Command="{Binding EditProfileCommand}"
                CornerRadius="25"
                FontAttributes="Bold"
                HeightRequest="50"
                Text="âœï¸ Editar Perfil"
                TextColor="White" />

            <Button
                BackgroundColor="{StaticResource Danger}"
                Command="{Binding LogoutCommand}"
                CornerRadius="25"
                FontAttributes="Bold"
                HeightRequest="50"
                Margin="0,0,0,20"
                Text="ðŸšª Cerrar SesiÃ³n"
                TextColor="White" />

        </VerticalStackLayout>
    </ScrollView>
</views:BasePage>
