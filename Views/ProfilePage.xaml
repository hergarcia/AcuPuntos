<?xml version="1.0" encoding="utf-8" ?>
<views:BasePage
    BackgroundColor="{AppThemeBinding Light={StaticResource Light},
                                      Dark={StaticResource Gray950}}"
    Shell.NavBarIsVisible="False"
    Title="{Binding Title}"
    x:Class="AcuPuntos.Views.ProfilePage"
    x:DataType="viewmodels:ProfileViewModel"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:controls="clr-namespace:AcuPuntos.Views.Controls"
    xmlns:models="clr-namespace:AcuPuntos.Models"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:viewmodels="clr-namespace:AcuPuntos.ViewModels"
    xmlns:views="clr-namespace:AcuPuntos.Views"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <Grid RowDefinitions="Auto,*">
        <!--  Header Background Shape  -->
        <BoxView
            Color="{StaticResource Primary}"
            Grid.RowSpan="2"
            HeightRequest="250"
            VerticalOptions="Start" />

        <RefreshView
            Command="{Binding RefreshProfileCommand}"
            Grid.RowSpan="2"
            RefreshColor="White">
            <ScrollView>
                <VerticalStackLayout Padding="24" Spacing="24">

                    <!--  Foto de perfil y nombre  -->
                    <VerticalStackLayout Margin="0,20,0,10" Spacing="16">
                        <!--  Foto de perfil circular  -->
                        <Border
                            BackgroundColor="{AppThemeBinding Light=White,
                                                              Dark={StaticResource Gray900}}"
                            HeightRequest="110"
                            HorizontalOptions="Center"
                            Stroke="{StaticResource SurfaceAlpha}"
                            StrokeShape="RoundRectangle 55"
                            StrokeThickness="4"
                            WidthRequest="110">
                            <Image Aspect="AspectFill" Source="{Binding CurrentUser.PhotoUrl, TargetNullValue='user_placeholder.svg', FallbackValue='user_placeholder.svg'}" />
                        </Border>

                        <VerticalStackLayout Spacing="4">
                            <Label
                                FontAttributes="Bold"
                                FontSize="28"
                                HorizontalOptions="Center"
                                HorizontalTextAlignment="Center"
                                Text="{Binding CurrentUser.DisplayName}"
                                TextColor="{AppThemeBinding Light=White,
                                                            Dark={StaticResource White}}" />

                            <Label
                                FontSize="14"
                                HorizontalOptions="Center"
                                HorizontalTextAlignment="Center"
                                Opacity="0.9"
                                Text="{Binding CurrentUser.Email}"
                                TextColor="{AppThemeBinding Light={StaticResource PrimaryLight},
                                                            Dark={StaticResource Gray300}}" />
                        </VerticalStackLayout>

                        <!--  Rol  -->
                        <Border
                            BackgroundColor="{StaticResource SurfaceAlpha}"
                            HorizontalOptions="Center"
                            Padding="16,6"
                            StrokeShape="RoundRectangle 16"
                            StrokeThickness="0">
                            <Label
                                FontAttributes="Bold"
                                FontSize="12"
                                Text="{Binding CurrentUser.Role}"
                                TextColor="{AppThemeBinding Light=White,
                                                            Dark={StaticResource White}}"
                                TextTransform="Uppercase" />
                        </Border>

                    </VerticalStackLayout>

                    <!--  Puntos actuales  -->
                    <Border
                        BackgroundColor="{AppThemeBinding Light={StaticResource SurfaceAlpha},
                                                          Dark={StaticResource Gray900}}"
                        Padding="0"
                        StrokeShape="RoundRectangle 24"
                        StrokeThickness="0">
                        <Grid ColumnDefinitions="*,Auto" Padding="24">
                            <VerticalStackLayout Spacing="4">
                                <Label
                                    FontSize="14"
                                    Opacity="0.9"
                                    Text="Puntos Disponibles"
                                    TextColor="{AppThemeBinding Light={StaticResource PrimaryDarkText},
                                                                Dark={StaticResource White}}" />
                                <Label
                                    FontAttributes="Bold"
                                    FontFamily="OpenSansBold"
                                    FontSize="42"
                                    Text="{Binding CurrentUser.Points, StringFormat='{0:N0}'}"
                                    TextColor="{AppThemeBinding Light={StaticResource PrimaryDark},
                                                                Dark={StaticResource PrimaryLight}}" />
                            </VerticalStackLayout>
                            <Label
                                FontSize="56"
                                Grid.Column="1"
                                Text="ðŸ’°"
                                VerticalOptions="Center" />
                        </Grid>
                    </Border>

                    <!--  Notificaciones  -->
                    <Border
                        IsVisible="{Binding Notifications.Count, Converter={StaticResource IntToBoolConverter}}"
                        Padding="24"
                        Style="{StaticResource CardFrame}">
                        <VerticalStackLayout Spacing="16">
                            <Label
                                FontAttributes="Bold"
                                FontSize="18"
                                Text="ðŸ”” Notificaciones"
                                TextColor="{AppThemeBinding Light={StaticResource PrimaryDarkText},
                                                            Dark={StaticResource White}}" />

                            <CollectionView HeightRequest="150" ItemsSource="{Binding Notifications}">
                                <CollectionView.ItemTemplate>
                                    <DataTemplate x:DataType="models:Notification">
                                        <Frame
                                            BackgroundColor="{AppThemeBinding Light={StaticResource Background},
                                                                              Dark={StaticResource Gray800}}"
                                            CornerRadius="10"
                                            HasShadow="False"
                                            Margin="0,5"
                                            Padding="10">
                                            <Frame.Triggers>
                                                <DataTrigger
                                                    Binding="{Binding IsRead}"
                                                    TargetType="Frame"
                                                    Value="False">
                                                    <Setter Property="BorderColor" Value="{StaticResource Primary}" />
                                                </DataTrigger>
                                                <DataTrigger
                                                    Binding="{Binding IsRead}"
                                                    TargetType="Frame"
                                                    Value="True">
                                                    <Setter Property="BorderColor" Value="Transparent" />
                                                </DataTrigger>
                                            </Frame.Triggers>
                                            <Grid ColumnDefinitions="*,Auto">
                                                <VerticalStackLayout>
                                                    <Label
                                                        FontAttributes="Bold"
                                                        FontSize="14"
                                                        Text="{Binding Title}"
                                                        TextColor="{AppThemeBinding Light={StaticResource Gray900},
                                                                                    Dark={StaticResource White}}" />
                                                    <Label
                                                        FontSize="12"
                                                        Text="{Binding Message}"
                                                        TextColor="{StaticResource Gray500}" />
                                                </VerticalStackLayout>

                                                <Button
                                                    BackgroundColor="Transparent"
                                                    BorderColor="Transparent"
                                                    Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:ProfileViewModel}}, Path=MarkNotificationAsReadCommand}"
                                                    CommandParameter="{Binding .}"
                                                    Grid.Column="1"
                                                    IsVisible="{Binding IsRead, Converter={StaticResource InvertedBoolConverter}}"
                                                    Text="âœ“"
                                                    TextColor="{StaticResource Primary}" />
                                            </Grid>
                                        </Frame>
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                            </CollectionView>
                        </VerticalStackLayout>
                    </Border>

                    <!--  GamificaciÃ³n (Fixed Contrast)  -->
                    <Border Padding="24" Style="{StaticResource CardFrame}">
                        <VerticalStackLayout Spacing="20">
                            <Label
                                FontAttributes="Bold"
                                FontSize="18"
                                Text="ðŸ† Tu Progreso"
                                TextColor="{AppThemeBinding Light={StaticResource PrimaryDarkText},
                                                            Dark={StaticResource White}}" />

                            <Grid ColumnDefinitions="*,*" ColumnSpacing="20">
                                <!--  Nivel  -->
                                <VerticalStackLayout Spacing="4">
                                    <Label
                                        FontSize="12"
                                        Text="Nivel Actual"
                                        TextColor="{StaticResource Gray500}" />
                                    <Label
                                        FontAttributes="Bold"
                                        FontSize="32"
                                        Text="{Binding CurrentUser.Level}"
                                        TextColor="{StaticResource Primary}" />
                                </VerticalStackLayout>

                                <!--  Experiencia  -->
                                <VerticalStackLayout Grid.Column="1" Spacing="4">
                                    <Label
                                        FontSize="12"
                                        Text="Experiencia"
                                        TextColor="{StaticResource Gray500}" />
                                    <Label
                                        FontAttributes="Bold"
                                        FontSize="32"
                                        Text="{Binding CurrentUser.Experience, StringFormat='{0} XP'}"
                                        TextColor="{StaticResource Secondary}" />
                                </VerticalStackLayout>
                            </Grid>

                            <!--  Racha  -->
                            <Border
                                BackgroundColor="{StaticResource Warning}"
                                Padding="16"
                                StrokeShape="RoundRectangle 16"
                                StrokeThickness="0">
                                <Grid ColumnDefinitions="Auto,*" ColumnSpacing="16">
                                    <Label
                                        FontSize="32"
                                        Text="ðŸ”¥"
                                        VerticalOptions="Center" />
                                    <VerticalStackLayout
                                        Grid.Column="1"
                                        Spacing="2"
                                        VerticalOptions="Center">
                                        <Label
                                            FontAttributes="Bold"
                                            FontSize="16"
                                            Text="{Binding CurrentUser.ConsecutiveDays, StringFormat='{0} dÃ­as consecutivos'}"
                                            TextColor="{AppThemeBinding Light={StaticResource Gray900},
                                                                        Dark={StaticResource Gray900}}" />
                                        <Label
                                            FontSize="12"
                                            Text="Â¡MantÃ©n tu racha!"
                                            TextColor="{StaticResource Gray800}" />
                                    </VerticalStackLayout>
                                </Grid>
                            </Border>

                        </VerticalStackLayout>
                    </Border>

                    <!--  Badges Ganados  -->
                    <VerticalStackLayout Spacing="12">
                        <Grid ColumnDefinitions="*,Auto">
                            <Label
                                FontAttributes="Bold"
                                FontSize="18"
                                Text="ðŸŽ–ï¸ Mis Badges"
                                TextColor="{AppThemeBinding Light={StaticResource PrimaryDarkText},
                                                            Dark={StaticResource White}}" />
                            <Label
                                FontAttributes="Bold"
                                FontSize="14"
                                Grid.Column="1"
                                Text="{Binding BadgesCount, StringFormat='{0} ganados'}"
                                TextColor="{StaticResource Primary}"
                                VerticalOptions="Center" />
                        </Grid>

                        <!--  Lista de badges  -->
                        <Border
                            IsVisible="{Binding HasBadges}"
                            Padding="16"
                            Style="{StaticResource CardFrame}">
                            <CollectionView ItemsSource="{Binding UserBadges}" SelectionMode="None">
                                <CollectionView.ItemsLayout>
                                    <GridItemsLayout
                                        HorizontalItemSpacing="12"
                                        Orientation="Vertical"
                                        Span="3"
                                        VerticalItemSpacing="12" />
                                </CollectionView.ItemsLayout>
                                <CollectionView.ItemTemplate>
                                    <DataTemplate x:DataType="models:UserBadge">
                                        <Border
                                            BackgroundColor="{AppThemeBinding Light={StaticResource Background},
                                                                              Dark={StaticResource Gray800}}"
                                            Padding="12"
                                            StrokeShape="RoundRectangle 16"
                                            StrokeThickness="0">
                                            <VerticalStackLayout Spacing="8">
                                                <Label
                                                    FontSize="32"
                                                    HorizontalOptions="Center"
                                                    Text="{Binding Badge.Icon}" />
                                                <Label
                                                    FontAttributes="Bold"
                                                    FontSize="11"
                                                    HorizontalOptions="Center"
                                                    HorizontalTextAlignment="Center"
                                                    LineBreakMode="WordWrap"
                                                    MaxLines="2"
                                                    Text="{Binding Badge.Name}"
                                                    TextColor="{AppThemeBinding Light={StaticResource Gray700},
                                                                                Dark={StaticResource Gray300}}" />
                                            </VerticalStackLayout>
                                        </Border>
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                            </CollectionView>
                        </Border>

                        <!--  Sin badges  -->
                        <Border
                            IsVisible="{Binding HasBadges, Converter={StaticResource InvertedBoolConverter}}"
                            Padding="32"
                            Style="{StaticResource CardFrame}">
                            <VerticalStackLayout Spacing="12">
                                <Label
                                    FontSize="48"
                                    HorizontalOptions="Center"
                                    Opacity="0.5"
                                    Text="ðŸŽ–ï¸" />
                                <Label
                                    FontSize="16"
                                    HorizontalOptions="Center"
                                    Text="AÃºn no tienes badges"
                                    TextColor="{StaticResource Gray500}" />
                                <Label
                                    FontSize="14"
                                    HorizontalOptions="Center"
                                    HorizontalTextAlignment="Center"
                                    Text="Completa acciones para ganar insignias"
                                    TextColor="{StaticResource Gray400}" />
                            </VerticalStackLayout>
                        </Border>
                    </VerticalStackLayout>

                    <!--  EstadÃ­sticas  -->
                    <Border Padding="24" Style="{StaticResource CardFrame}">
                        <VerticalStackLayout Spacing="20">

                            <Label
                                FontAttributes="Bold"
                                FontSize="18"
                                Text="ðŸ“Š EstadÃ­sticas"
                                TextColor="{AppThemeBinding Light={StaticResource PrimaryDarkText},
                                                            Dark={StaticResource White}}" />

                            <Grid
                                ColumnDefinitions="*,*"
                                ColumnSpacing="16"
                                RowDefinitions="Auto,Auto"
                                RowSpacing="16">

                                <!--  Transacciones  -->
                                <Border
                                    BackgroundColor="{AppThemeBinding Light={StaticResource Background},
                                                                      Dark={StaticResource Gray800}}"
                                    Grid.Column="0"
                                    Grid.Row="0"
                                    Padding="16"
                                    StrokeShape="RoundRectangle 16"
                                    StrokeThickness="0">
                                    <VerticalStackLayout Spacing="4">
                                        <Label
                                            FontSize="24"
                                            HorizontalOptions="Center"
                                            Text="ðŸ“" />
                                        <Label
                                            FontSize="12"
                                            HorizontalOptions="Center"
                                            Text="Transacciones"
                                            TextColor="{StaticResource Gray500}" />
                                        <Label
                                            FontAttributes="Bold"
                                            FontSize="20"
                                            HorizontalOptions="Center"
                                            Text="{Binding TotalTransactions}"
                                            TextColor="{StaticResource Primary}" />
                                    </VerticalStackLayout>
                                </Border>

                                <!--  Canjes  -->
                                <Border
                                    BackgroundColor="{AppThemeBinding Light={StaticResource Background},
                                                                      Dark={StaticResource Gray800}}"
                                    Grid.Column="1"
                                    Grid.Row="0"
                                    Padding="16"
                                    StrokeShape="RoundRectangle 16"
                                    StrokeThickness="0">
                                    <VerticalStackLayout Spacing="4">
                                        <Label
                                            FontSize="24"
                                            HorizontalOptions="Center"
                                            Text="ðŸŽ" />
                                        <Label
                                            FontSize="12"
                                            HorizontalOptions="Center"
                                            Text="Canjes"
                                            TextColor="{StaticResource Gray500}" />
                                        <Label
                                            FontAttributes="Bold"
                                            FontSize="20"
                                            HorizontalOptions="Center"
                                            Text="{Binding TotalRedemptions}"
                                            TextColor="{StaticResource Warning}" />
                                    </VerticalStackLayout>
                                </Border>

                                <!--  Puntos ganados  -->
                                <Border
                                    BackgroundColor="{AppThemeBinding Light={StaticResource Background},
                                                                      Dark={StaticResource Gray800}}"
                                    Grid.Column="0"
                                    Grid.Row="1"
                                    Padding="16"
                                    StrokeShape="RoundRectangle 16"
                                    StrokeThickness="0">
                                    <VerticalStackLayout Spacing="4">
                                        <Label
                                            FontSize="24"
                                            HorizontalOptions="Center"
                                            Text="ðŸ“ˆ" />
                                        <Label
                                            FontSize="12"
                                            HorizontalOptions="Center"
                                            Text="Ganados"
                                            TextColor="{StaticResource Gray500}" />
                                        <Label
                                            FontAttributes="Bold"
                                            FontSize="20"
                                            HorizontalOptions="Center"
                                            Text="{Binding TotalPointsEarned, StringFormat='{0:N0}'}"
                                            TextColor="{StaticResource Success}" />
                                    </VerticalStackLayout>
                                </Border>

                                <!--  Puntos gastados  -->
                                <Border
                                    BackgroundColor="{AppThemeBinding Light={StaticResource Background},
                                                                      Dark={StaticResource Gray800}}"
                                    Grid.Column="1"
                                    Grid.Row="1"
                                    Padding="16"
                                    StrokeShape="RoundRectangle 16"
                                    StrokeThickness="0">
                                    <VerticalStackLayout Spacing="4">
                                        <Label
                                            FontSize="24"
                                            HorizontalOptions="Center"
                                            Text="ðŸ“‰" />
                                        <Label
                                            FontSize="12"
                                            HorizontalOptions="Center"
                                            Text="Gastados"
                                            TextColor="{StaticResource Gray500}" />
                                        <Label
                                            FontAttributes="Bold"
                                            FontSize="20"
                                            HorizontalOptions="Center"
                                            Text="{Binding TotalPointsSpent, StringFormat='{0:N0}'}"
                                            TextColor="{StaticResource Danger}" />
                                    </VerticalStackLayout>
                                </Border>

                            </Grid>

                        </VerticalStackLayout>
                    </Border>

                    <!--  InformaciÃ³n de cuenta  -->
                    <Border Padding="24" Style="{StaticResource CardFrame}">
                        <VerticalStackLayout Spacing="16">

                            <Label
                                FontAttributes="Bold"
                                FontSize="18"
                                Text="â„¹ï¸ InformaciÃ³n"
                                TextColor="{AppThemeBinding Light={StaticResource PrimaryDarkText},
                                                            Dark={StaticResource White}}" />

                            <HorizontalStackLayout Spacing="8">
                                <Label
                                    FontSize="14"
                                    Text="Miembro desde:"
                                    TextColor="{StaticResource Gray500}"
                                    VerticalOptions="Center" />
                                <Label
                                    FontAttributes="Bold"
                                    FontSize="14"
                                    Text="{Binding CurrentUser.CreatedAt, StringFormat='{0:dd/MM/yyyy}'}"
                                    TextColor="{AppThemeBinding Light={StaticResource Gray900},
                                                                Dark={StaticResource White}}"
                                    VerticalOptions="Center" />
                            </HorizontalStackLayout>

                            <HorizontalStackLayout Spacing="8">
                                <Label
                                    FontSize="12"
                                    Text="UID:"
                                    TextColor="{StaticResource Gray400}"
                                    VerticalOptions="Center" />
                                <Label
                                    FontSize="12"
                                    HorizontalOptions="FillAndExpand"
                                    LineBreakMode="TailTruncation"
                                    Text="{Binding CurrentUser.Uid}"
                                    TextColor="{StaticResource Gray400}"
                                    VerticalOptions="Center" />
                            </HorizontalStackLayout>

                        </VerticalStackLayout>
                    </Border>

                    <!--  Preferencias  -->
                    <Border Padding="24" Style="{StaticResource CardFrame}">
                        <VerticalStackLayout Spacing="16">

                            <Label
                                FontAttributes="Bold"
                                FontSize="18"
                                Text="âš™ï¸ Preferencias"
                                TextColor="{AppThemeBinding Light={StaticResource PrimaryDarkText},
                                                            Dark={StaticResource White}}" />

                            <!--  Dark Mode Toggle  -->
                            <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="16">
                                <Label
                                    FontSize="28"
                                    Text="ðŸŒ™"
                                    VerticalOptions="Center" />
                                <VerticalStackLayout
                                    Grid.Column="1"
                                    Spacing="2"
                                    VerticalOptions="Center">
                                    <Label
                                        FontAttributes="Bold"
                                        FontSize="14"
                                        Text="Modo Oscuro"
                                        TextColor="{AppThemeBinding Light={StaticResource PrimaryDarkText},
                                                                    Dark={StaticResource White}}" />
                                    <Label
                                        FontSize="12"
                                        Text="Cambia el tema de la aplicaciÃ³n"
                                        TextColor="{StaticResource Gray500}" />
                                </VerticalStackLayout>
                                <Switch
                                    Grid.Column="2"
                                    IsToggled="{Binding IsDarkMode}"
                                    OnColor="{StaticResource Primary}"
                                    ThumbColor="White"
                                    VerticalOptions="Center" />
                            </Grid>

                        </VerticalStackLayout>
                    </Border>

                    <!--  Botones de acciÃ³n  -->
                    <Button
                        Command="{Binding EditProfileCommand}"
                        Style="{StaticResource SecondaryButton}"
                        Text="âœï¸ Editar Perfil" />

                    <Button
                        BackgroundColor="{StaticResource Danger}"
                        Command="{Binding LogoutCommand}"
                        CornerRadius="12"
                        FontAttributes="Bold"
                        HeightRequest="52"
                        Margin="0,0,0,20"
                        Shadow="{Null}"
                        Text="ðŸšª Cerrar SesiÃ³n"
                        TextColor="White" />

                </VerticalStackLayout>
            </ScrollView>
        </RefreshView>

        <!--  Loading Overlay Reutilizable  -->
        <controls:LoadingOverlay Grid.RowSpan="2" />
    </Grid>
</views:BasePage>
