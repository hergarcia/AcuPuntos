<?xml version="1.0" encoding="utf-8" ?>
<views:BasePage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:AcuPuntos.Views"
             xmlns:viewmodels="clr-namespace:AcuPuntos.ViewModels"
             x:Class="AcuPuntos.Views.HistoryPage"
             x:DataType="viewmodels:HistoryViewModel"
             Title="{Binding Title}"
             BackgroundColor="#F5F5F5">

    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="20">

            <!-- EstadÃ­sticas -->
            <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
                <!-- Puntos ganados -->
                <Border Grid.Column="0"
                       Style="{StaticResource CardFrame}"
                       BackgroundColor="#2ECC71"
                       Padding="15">
                    <VerticalStackLayout Spacing="5">
                        <Label Text="ðŸ“ˆ"
                               FontSize="30"
                               HorizontalOptions="Center"/>
                        <Label Text="Ganados"
                               TextColor="White"
                               FontSize="12"
                               HorizontalOptions="Center"/>
                        <Label Text="{Binding TotalPointsEarned, StringFormat='{0:N0}'}"
                               TextColor="White"
                               FontSize="22"
                               FontAttributes="Bold"
                               HorizontalOptions="Center"/>
                    </VerticalStackLayout>
                </Border>

                <!-- Puntos gastados -->
                <Border Grid.Column="1"
                       Style="{StaticResource CardFrame}"
                       BackgroundColor="#E74C3C"
                       Padding="15">
                    <VerticalStackLayout Spacing="5">
                        <Label Text="ðŸ“‰"
                               FontSize="30"
                               HorizontalOptions="Center"/>
                        <Label Text="Gastados"
                               TextColor="White"
                               FontSize="12"
                               HorizontalOptions="Center"/>
                        <Label Text="{Binding TotalPointsSpent, StringFormat='{0:N0}'}"
                               TextColor="White"
                               FontSize="22"
                               FontAttributes="Bold"
                               HorizontalOptions="Center"/>
                    </VerticalStackLayout>
                </Border>
            </Grid>

            <!-- Filtros -->
            <Border Style="{StaticResource CardFrame}"
                   Padding="15">
                <VerticalStackLayout Spacing="10">
                    <SearchBar Placeholder="Buscar en historial..."
                               Text="{Binding SearchText}"
                               BackgroundColor="#F5F5F5"
                               PlaceholderColor="#999999"/>

                    <HorizontalStackLayout Spacing="10">
                        <Label Text="Filtrar:"
                               FontSize="14"
                               TextColor="#666666"
                               VerticalOptions="Center"/>
                        <Picker ItemsSource="{Binding Filters}"
                                SelectedItem="{Binding SelectedFilter}"
                                BackgroundColor="#F5F5F5"
                                HorizontalOptions="FillAndExpand"/>
                    </HorizontalStackLayout>
                </VerticalStackLayout>
            </Border>

            <!-- Lista de transacciones -->
            <Label Text="{Binding TotalTransactions, StringFormat='Total: {0} transacciones'}"
                   FontSize="16"
                   FontAttributes="Bold"
                   TextColor="#666666"/>

            <CollectionView ItemsSource="{Binding FilteredTransactions}"
                          SelectionMode="None">
                <CollectionView.EmptyView>
                    <Border Style="{StaticResource CardFrame}"
                           Padding="40">
                        <VerticalStackLayout Spacing="10">
                            <Label Text="ðŸ“Š"
                                   FontSize="50"
                                   HorizontalOptions="Center"/>
                            <Label Text="No hay transacciones"
                                   FontSize="16"
                                   TextColor="#666666"
                                   HorizontalOptions="Center"/>
                        </VerticalStackLayout>
                    </Border>
                </CollectionView.EmptyView>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border Style="{StaticResource CardFrame}"
                               Padding="15"
                               Margin="0,0,0,10">
                            <Grid RowDefinitions="Auto,Auto,Auto"
                                  ColumnDefinitions="Auto,*,Auto">

                                <!-- Icono segÃºn tipo -->
                                <Label Grid.Row="0" Grid.RowSpan="2"
                                       Text="{Binding Type, Converter={StaticResource TransactionIconConverter}}"
                                       FontSize="40"
                                       VerticalOptions="Center"/>

                                <!-- DescripciÃ³n -->
                                <VerticalStackLayout Grid.Row="0" Grid.Column="1"
                                                   Margin="15,0,0,0">
                                    <Label Text="{Binding Description}"
                                           FontSize="16"
                                           FontAttributes="Bold"
                                           TextColor="#333333"
                                           LineBreakMode="TailTruncation"
                                           MaxLines="2"/>
                                    <Label Text="{Binding CreatedAt, StringFormat='{0:dd/MM/yyyy HH:mm}'}"
                                           FontSize="12"
                                           TextColor="#999999"/>
                                </VerticalStackLayout>

                                <!-- Monto -->
                                <VerticalStackLayout Grid.Row="0" Grid.Column="2"
                                                   HorizontalOptions="End">
                                    <Label Text="{Binding Amount, StringFormat='{0:+#,0;-#,0;0}'}"
                                           FontSize="20"
                                           FontAttributes="Bold"
                                           TextColor="{Binding Type, Converter={StaticResource TransactionColorConverter}}"
                                           HorizontalOptions="End"/>
                                    <Label Text="puntos"
                                           FontSize="12"
                                           TextColor="#999999"
                                           HorizontalOptions="End"/>
                                </VerticalStackLayout>

                                <!-- Tipo de transacciÃ³n -->
                                <Border Grid.Row="2" Grid.ColumnSpan="3"
                                       Padding="8,4"
                                       CornerRadius="10"
                                       BackgroundColor="{Binding Type, Converter={StaticResource TransactionColorConverter}}"
                                       HorizontalOptions="Start"
                                       Margin="0,10,0,0">
                                    <Label Text="{Binding Type, Converter={StaticResource TransactionTypeConverter}}"
                                           TextColor="White"
                                           FontSize="12"
                                           FontAttributes="Bold"/>
                                </Border>

                            </Grid>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- BotÃ³n de refrescar -->
            <Button Text="ðŸ”„ Actualizar"
                    Command="{Binding RefreshHistoryCommand}"
                    BackgroundColor="#3498DB"
                    TextColor="White"
                    FontAttributes="Bold"
                    HeightRequest="50"
                    CornerRadius="25"
                    Margin="0,10,0,20"/>

        </VerticalStackLayout>
    </ScrollView>
</views:BasePage>
