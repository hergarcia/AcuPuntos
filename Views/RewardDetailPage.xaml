<?xml version="1.0" encoding="utf-8" ?>
<views:BasePage
    BackgroundColor="#F5F5F5"
    Shell.NavBarIsVisible="True"
    Shell.TabBarIsVisible="False"
    Title="{Binding Title}"
    x:Class="AcuPuntos.Views.RewardDetailPage"
    x:DataType="viewmodels:RewardDetailViewModel"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:viewmodels="clr-namespace:AcuPuntos.ViewModels"
    xmlns:views="clr-namespace:AcuPuntos.Views"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <!--  Icono grande  -->
            <Label
                FontSize="100"
                HorizontalOptions="Center"
                Text="{Binding Reward.Icon, FallbackValue='ðŸŽ'}" />

            <!--  InformaciÃ³n principal  -->
            <Border Padding="20" Style="{StaticResource CardFrame}">
                <VerticalStackLayout Spacing="15">

                    <Label
                        FontAttributes="Bold"
                        FontSize="24"
                        HorizontalOptions="Center"
                        HorizontalTextAlignment="Center"
                        Text="{Binding Reward.Name}"
                        TextColor="#333333" />

                    <!--  CategorÃ­a  -->
                    <Border
                        BackgroundColor="LightBlue"
                        HorizontalOptions="Center"
                        Padding="10,5"
                        StrokeShape="RoundRectangle 15">
                        <Label
                            FontAttributes="Bold"
                            FontSize="14"
                            Text="{Binding Reward.Category}"
                            TextColor="White" />
                    </Border>

                    <!--  Costo  -->
                    <Border
                        BackgroundColor="#2ECC71"
                        HorizontalOptions="Center"
                        Padding="15,10"
                        StrokeShape="RoundRectangle 20">
                        <HorizontalStackLayout Spacing="5">
                            <Label
                                FontSize="20"
                                Text="ðŸ’°"
                                VerticalOptions="Center" />
                            <Label
                                FontAttributes="Bold"
                                FontSize="22"
                                Text="{Binding Reward.PointsCost, StringFormat='{0:N0} puntos'}"
                                TextColor="White"
                                VerticalOptions="Center" />
                        </HorizontalStackLayout>
                    </Border>

                    <!--  DescripciÃ³n  -->
                    <BoxView
                        Color="#E0E0E0"
                        HeightRequest="1"
                        Margin="0,10" />

                    <Label
                        FontAttributes="Bold"
                        FontSize="16"
                        Text="DescripciÃ³n"
                        TextColor="#666666" />

                    <Label
                        FontSize="15"
                        LineBreakMode="WordWrap"
                        Text="{Binding Reward.Description}"
                        TextColor="#333333" />

                    <!--  InformaciÃ³n adicional  -->
                    <BoxView
                        Color="#E0E0E0"
                        HeightRequest="1"
                        Margin="0,10" />

                    <!--  Fecha de expiraciÃ³n  -->
                    <HorizontalStackLayout IsVisible="{Binding Reward.ExpiryDate, Converter={StaticResource NullToBoolConverter}}" Spacing="10">
                        <Label
                            FontSize="20"
                            Text="â°"
                            VerticalOptions="Center" />
                        <VerticalStackLayout>
                            <Label
                                FontSize="12"
                                Text="VÃ¡lido hasta:"
                                TextColor="#666666" />
                            <Label
                                FontAttributes="Bold"
                                FontSize="14"
                                Text="{Binding Reward.ExpiryDate, StringFormat='{0:dd/MM/yyyy}'}"
                                TextColor="#333333" />
                        </VerticalStackLayout>
                    </HorizontalStackLayout>

                    <!--  LÃ­mite de canjes  -->
                    <HorizontalStackLayout IsVisible="{Binding Reward.MaxRedemptionsPerUser, Converter={StaticResource NullToBoolConverter}}" Spacing="10">
                        <Label
                            FontSize="20"
                            Text="ðŸŽ¯"
                            VerticalOptions="Center" />
                        <VerticalStackLayout>
                            <Label
                                FontSize="12"
                                Text="LÃ­mite por usuario:"
                                TextColor="#666666" />
                            <Label
                                FontAttributes="Bold"
                                FontSize="14"
                                Text="{Binding Reward.MaxRedemptionsPerUser, StringFormat='{0} canjes'}"
                                TextColor="#333333" />
                        </VerticalStackLayout>
                    </HorizontalStackLayout>

                </VerticalStackLayout>
            </Border>

            <!--  Estado del usuario  -->
            <Border
                BackgroundColor="#E8F8F5"
                Padding="20"
                Style="{StaticResource CardFrame}">
                <VerticalStackLayout Spacing="10">
                    <HorizontalStackLayout Spacing="10">
                        <Border
                            BackgroundColor="#E0E0E0"
                            HeightRequest="40"
                            StrokeShape="RoundRectangle 20"
                            StrokeThickness="2"
                            VerticalOptions="Center"
                            WidthRequest="40">
                            <Image
                                Aspect="AspectFill"
                                Source="{Binding CurrentUser.PhotoUrl, TargetNullValue='user_placeholder.png', FallbackValue='user_placeholder.png'}" />
                        </Border>
                        <VerticalStackLayout>
                            <Label
                                FontSize="14"
                                Text="Tus puntos:"
                                TextColor="#666666" />
                            <Label
                                FontAttributes="Bold"
                                FontSize="18"
                                Text="{Binding CurrentUser.Points, StringFormat='{0:N0} puntos'}"
                                TextColor="#2ECC71" />
                        </VerticalStackLayout>
                    </HorizontalStackLayout>

                    <Label
                        FontSize="14"
                        HorizontalTextAlignment="Center"
                        Margin="0,10,0,0"
                        Text="{Binding StatusMessage}"
                        TextColor="#666666" />
                </VerticalStackLayout>
            </Border>

            <!--  BotÃ³n de canje  -->
            <Button
                BackgroundColor="#2ECC71"
                Command="{Binding RedeemRewardCommand}"
                CornerRadius="27"
                FontAttributes="Bold"
                FontSize="18"
                HeightRequest="55"
                IsEnabled="{Binding CanRedeem}"
                Margin="0,10,0,20"
                Text="Canjear Recompensa"
                TextColor="White">
                <Button.Triggers>
                    <DataTrigger
                        Binding="{Binding CanRedeem}"
                        TargetType="Button"
                        Value="False">
                        <Setter Property="BackgroundColor" Value="#E0E0E0" />
                        <Setter Property="TextColor" Value="#999999" />
                        <Setter Property="Text" Value="No disponible" />
                    </DataTrigger>
                </Button.Triggers>
            </Button>

        </VerticalStackLayout>
    </ScrollView>
</views:BasePage>
