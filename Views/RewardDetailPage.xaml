                                   TextColor="#666666"/>
                            <Label Text="{Binding Reward.ExpiryDate, StringFormat='{0:dd/MM/yyyy}'}"
                                   FontSize="14"
                                   FontAttributes="Bold"
                                   TextColor="#333333"/>
                        </VerticalStackLayout>
                    </HorizontalStackLayout>

                    <!-- LÃ­mite de canjes -->
                    <HorizontalStackLayout Spacing="10"
                                         IsVisible="{Binding Reward.MaxRedemptionsPerUser, Converter={StaticResource NullToBoolConverter}}">
                        <Label Text="ðŸŽ¯"
                               FontSize="20"
                               VerticalOptions="Center"/>
                        <VerticalStackLayout>
                            <Label Text="LÃ­mite por usuario:"
                                   FontSize="12"
                                   TextColor="#666666"/>
                            <Label Text="{Binding Reward.MaxRedemptionsPerUser, StringFormat='{0} canjes'}"
                                   FontSize="14"
                                   FontAttributes="Bold"
                                   TextColor="#333333"/>
                        </VerticalStackLayout>
                    </HorizontalStackLayout>

                </VerticalStackLayout>
            </Border>

            <!-- Estado del usuario -->
            <Border Style="{StaticResource CardFrame}"
                   BackgroundColor="#E8F8F5"
                   Padding="20">
                <VerticalStackLayout Spacing="10">
                    <HorizontalStackLayout Spacing="10">
                        <Label Text="ðŸ‘¤"
                               FontSize="24"
                               VerticalOptions="Center"/>
                        <VerticalStackLayout>
                            <Label Text="Tus puntos:"
                                   FontSize="14"
                                   TextColor="#666666"/>
                            <Label Text="{Binding CurrentUser.Points, StringFormat='{0:N0} puntos'}"
                                   FontSize="18"
                                   FontAttributes="Bold"
                                   TextColor="#2ECC71"/>
                        </VerticalStackLayout>
                    </HorizontalStackLayout>

                    <Label Text="{Binding StatusMessage}"
                           FontSize="14"
                           TextColor="#666666"
                           HorizontalTextAlignment="Center"
                           Margin="0,10,0,0"/>
                </VerticalStackLayout>
            </Border>

            <!-- BotÃ³n de canje -->
            <Button Text="Canjear Recompensa"
                    Command="{Binding RedeemRewardCommand}"
                    IsEnabled="{Binding CanRedeem}"
                    BackgroundColor="#2ECC71"
                    TextColor="White"
                    FontAttributes="Bold"
                    FontSize="18"
                    HeightRequest="55"
                    CornerRadius="27"
                    Margin="0,10,0,20">
                <Button.Triggers>
                    <DataTrigger TargetType="Button"
                               Binding="{Binding CanRedeem}"
                               Value="False">
                        <Setter Property="BackgroundColor" Value="#E0E0E0"/>
                        <Setter Property="TextColor" Value="#999999"/>
                        <Setter Property="Text" Value="No disponible"/>
                    </DataTrigger>
                </Button.Triggers>
            </Button>

        </VerticalStackLayout>
