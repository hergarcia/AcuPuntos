                   Padding="20">
                <VerticalStackLayout Spacing="15">
                    
                    <Label Text="{Binding Reward.Name}"
                           FontSize="24"
                           FontAttributes="Bold"
                           TextColor="#333333"
                           HorizontalOptions="Center"
                           HorizontalTextAlignment="Center"/>

                    <!-- CategorÃ­a -->
                    <Border Padding="10,5"
                           CornerRadius="15"
                           BackgroundColor="LightBlue"
                           HorizontalOptions="Center">
                        <Label Text="{Binding Reward.Category}"
                               TextColor="White"
                               FontSize="14"
                               FontAttributes="Bold"/>
                    </Border>

                    <!-- Costo -->
                    <Border BackgroundColor="#2ECC71"
                           Padding="15,10"
