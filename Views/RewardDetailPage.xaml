                             Margin="0,10"/>

                    <Label Text="DescripciÃ³n"
                           FontSize="16"
                           FontAttributes="Bold"
                           TextColor="#666666"/>

                    <Label Text="{Binding Reward.Description}"
                           FontSize="15"
                           TextColor="#333333"
                           LineBreakMode="WordWrap"/>

                    <!-- InformaciÃ³n adicional -->
                    <BoxView HeightRequest="1"
                             Color="#E0E0E0"
                             Margin="0,10"/>

                    <!-- Fecha de expiraciÃ³n -->
                    <HorizontalStackLayout Spacing="10"
                                         IsVisible="{Binding Reward.ExpiryDate, Converter={StaticResource NullToBoolConverter}}">
