<?xml version="1.0" encoding="utf-8" ?>
<views:BasePage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:AcuPuntos.Views"
             xmlns:viewmodels="clr-namespace:AcuPuntos.ViewModels"
             x:Class="AcuPuntos.Views.UserDetailPage"
             x:DataType="viewmodels:UserDetailViewModel"
             Title="{Binding Title}"
             BackgroundColor="#F5F5F5">

    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="20">

            <!-- Perfil del usuario -->
            <Frame Style="{StaticResource CardFrame}"
                   BackgroundColor="#3498DB"
                   Padding="25">
                <VerticalStackLayout Spacing="15">
                    
                    <Label Text="ðŸ‘¤"
                           FontSize="70"
                           HorizontalOptions="Center"/>

                    <Label Text="{Binding User.DisplayName}"
                           TextColor="White"
                           FontSize="22"
                           FontAttributes="Bold"
                           HorizontalOptions="Center"/>

                    <Label Text="{Binding User.Email}"
                           TextColor="White"
                           FontSize="14"
                           Opacity="0.9"
                           HorizontalOptions="Center"/>

                    <Frame Padding="8,4"
                           CornerRadius="12"
                           BackgroundColor="White"
                           HorizontalOptions="Center">
                        <Label Text="{Binding User.Role}"
                               TextColor="#3498DB"
                               FontSize="12"
                               FontAttributes="Bold"/>
                    </Frame>

                </VerticalStackLayout>
            </Frame>

            <!-- Puntos actuales -->
            <Frame Style="{StaticResource CardFrame}"
                   BackgroundColor="#2ECC71"
                   Padding="20">
                <Grid ColumnDefinitions="*,Auto">
                    <VerticalStackLayout>
                        <Label Text="Puntos Actuales"
                               TextColor="White"
                               FontSize="16"
                               Opacity="0.9"/>
                        <Label Text="{Binding User.Points, StringFormat='{0:N0}'}"
                               TextColor="White"
                               FontSize="34"
                               FontAttributes="Bold"/>
                    </VerticalStackLayout>
                    <Label Grid.Column="1"
                           Text="ðŸ’°"
                           FontSize="55"
                           VerticalOptions="Center"/>
                </Grid>
            </Frame>

            <!-- EstadÃ­sticas -->
            <Frame Style="{StaticResource CardFrame}"
                   Padding="20">
                <VerticalStackLayout Spacing="15">
                    
                    <Label Text="ðŸ“Š EstadÃ­sticas"
                           FontSize="20"
                           FontAttributes="Bold"
                           TextColor="#333333"/>

                    <Grid RowDefinitions="Auto,Auto"
                          ColumnDefinitions="*,*"
                          RowSpacing="12"
                          ColumnSpacing="12">

                        <Frame Grid.Row="0" Grid.Column="0"
                               BackgroundColor="#E8F5E9"
                               Padding="15"
                               CornerRadius="12">
                            <VerticalStackLayout Spacing="5">
                                <Label Text="ðŸ“"
                                       FontSize="28"
                                       HorizontalOptions="Center"/>
                                <Label Text="Transacciones"
                                       FontSize="11"
                                       TextColor="#666666"
                                       HorizontalOptions="Center"/>
                                <Label Text="{Binding TotalTransactions}"
                                       FontSize="22"
                                       FontAttributes="Bold"
                                       TextColor="#2ECC71"
                                       HorizontalOptions="Center"/>
                            </VerticalStackLayout>
                        </Frame>

                        <Frame Grid.Row="0" Grid.Column="1"
                               BackgroundColor="#FFF3E0"
                               Padding="15"
                               CornerRadius="12">
                            <VerticalStackLayout Spacing="5">
                                <Label Text="ðŸŽ"
                                       FontSize="28"
                                       HorizontalOptions="Center"/>
                                <Label Text="Canjes"
                                       FontSize="11"
                                       TextColor="#666666"
                                       HorizontalOptions="Center"/>
                                <Label Text="{Binding TotalRedemptions}"
                                       FontSize="22"
                                       FontAttributes="Bold"
                                       TextColor="#F39C12"
                                       HorizontalOptions="Center"/>
                            </VerticalStackLayout>
                        </Frame>

                        <Frame Grid.Row="1" Grid.Column="0"
                               BackgroundColor="#E3F2FD"
                               Padding="15"
                               CornerRadius="12">
                            <VerticalStackLayout Spacing="5">
                                <Label Text="ðŸ“ˆ"
                                       FontSize="28"
                                       HorizontalOptions="Center"/>
                                <Label Text="Ganados"
                                       FontSize="11"
                                       TextColor="#666666"
                                       HorizontalOptions="Center"/>
                                <Label Text="{Binding TotalPointsEarned, StringFormat='{0:N0}'}"
                                       FontSize="22"
                                       FontAttributes="Bold"
                                       TextColor="#3498DB"
                                       HorizontalOptions="Center"/>
                            </VerticalStackLayout>
                        </Frame>

                        <Frame Grid.Row="1" Grid.Column="1"
                               BackgroundColor="#FFEBEE"
                               Padding="15"
                               CornerRadius="12">
                            <VerticalStackLayout Spacing="5">
                                <Label Text="ðŸ“‰"
                                       FontSize="28"
                                       HorizontalOptions="Center"/>
                                <Label Text="Gastados"
                                       FontSize="11"
                                       TextColor="#666666"
                                       HorizontalOptions="Center"/>
                                <Label Text="{Binding TotalPointsSpent, StringFormat='{0:N0}'}"
                                       FontSize="22"
                                       FontAttributes="Bold"
                                       TextColor="#E74C3C"
                                       HorizontalOptions="Center"/>
                            </VerticalStackLayout>
                        </Frame>

                    </Grid>

                </VerticalStackLayout>
            </Frame>

            <!-- InformaciÃ³n de cuenta -->
            <Frame Style="{StaticResource CardFrame}"
                   Padding="20">
                <VerticalStackLayout Spacing="12">
                    
                    <Label Text="â„¹ï¸ InformaciÃ³n de Cuenta"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="#333333"/>

                    <HorizontalStackLayout Spacing="10">
                        <Label Text="Miembro desde:"
                               FontSize="14"
                               TextColor="#666666"
                               VerticalOptions="Center"/>
                        <Label Text="{Binding User.CreatedAt, StringFormat='{0:dd/MM/yyyy}'}"
                               FontSize="14"
                               FontAttributes="Bold"
                               TextColor="#333333"
                               VerticalOptions="Center"/>
                    </HorizontalStackLayout>

                    <HorizontalStackLayout Spacing="10">
                        <Label Text="UID:"
                               FontSize="12"
                               TextColor="#999999"
                               VerticalOptions="Center"/>
                        <Label Text="{Binding User.Uid}"
                               FontSize="11"
                               TextColor="#999999"
                               VerticalOptions="Center"
                               LineBreakMode="TailTruncation"
                               HorizontalOptions="FillAndExpand"/>
                    </HorizontalStackLayout>

                </VerticalStackLayout>
            </Frame>

            <!-- Transacciones recientes -->
            <Label Text="ðŸ“ Transacciones Recientes"
                   FontSize="18"
                   FontAttributes="Bold"
                   TextColor="#333333"/>

            <CollectionView ItemsSource="{Binding RecentTransactions}"
                          SelectionMode="None"
                          HeightRequest="300">
                <CollectionView.EmptyView>
                    <Frame Style="{StaticResource CardFrame}"
                           Padding="30">
                        <Label Text="No hay transacciones"
                               FontSize="14"
                               TextColor="#666666"
                               HorizontalOptions="Center"/>
                    </Frame>
                </CollectionView.EmptyView>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Style="{StaticResource CardFrame}"
                               Padding="12"
                               Margin="0,0,0,8">
                            <Grid ColumnDefinitions="Auto,*,Auto">

                                <Label Text="{Binding Type, Converter={StaticResource TransactionIconConverter}}"
                                       FontSize="32"
                                       VerticalOptions="Center"/>

                                <VerticalStackLayout Grid.Column="1"
                                                   Margin="12,0,0,0">
                                    <Label Text="{Binding Description}"
                                           FontSize="14"
                                           FontAttributes="Bold"
                                           TextColor="#333333"
                                           LineBreakMode="TailTruncation"/>
                                    <Label Text="{Binding CreatedAt, StringFormat='{0:dd/MM/yyyy HH:mm}'}"
                                           FontSize="11"
                                           TextColor="#999999"/>
                                </VerticalStackLayout>

                                <Label Grid.Column="2"
                                       Text="{Binding Amount, StringFormat='{0:+#,0;-#,0;0}'}"
                                       FontSize="16"
                                       FontAttributes="Bold"
                                       TextColor="{Binding Type, Converter={StaticResource TransactionColorConverter}}"
                                       VerticalOptions="Center"/>

                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- Botones de acciÃ³n -->
            <Button Text="ðŸ’° Asignar Puntos"
                    Command="{Binding AssignPointsCommand}"
                    BackgroundColor="#2ECC71"
                    TextColor="White"
                    FontAttributes="Bold"
                    HeightRequest="50"
                    CornerRadius="25"/>

            <Button Text="ðŸ”„ Actualizar"
                    Command="{Binding RefreshUserDetailCommand}"
                    BackgroundColor="#95A5A6"
                    TextColor="White"
                    FontAttributes="Bold"
                    HeightRequest="50"
                    CornerRadius="25"
                    Margin="0,0,0,20"/>

        </VerticalStackLayout>
    </ScrollView>
</views:BasePage>
