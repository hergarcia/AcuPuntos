<?xml version="1.0" encoding="utf-8" ?>
<Border xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
        xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
        xmlns:controls="clr-namespace:AcuPuntos.Views.Controls"
        x:Class="AcuPuntos.Views.Controls.ListItemSkeleton"
        Style="{StaticResource ListItemCard}"
        Padding="15"
        Margin="0,0,0,10">

    <Grid ColumnDefinitions="Auto,*,Auto" RowDefinitions="Auto,Auto">
        <!-- Avatar skeleton -->
        <controls:SkeletonBox Grid.Row="0"
                             Grid.RowSpan="2"
                             WidthRequest="50"
                             HeightRequest="50"
                             CornerRadius="25"
                             VerticalOptions="Center"/>

        <!-- Title skeleton -->
        <controls:SkeletonBox Grid.Row="0"
                             Grid.Column="1"
                             Margin="15,0,0,5"
                             HeightRequest="16"
                             WidthRequest="150"
                             HorizontalOptions="Start"/>

        <!-- Subtitle skeleton -->
        <controls:SkeletonBox Grid.Row="1"
                             Grid.Column="1"
                             Margin="15,0,0,0"
                             HeightRequest="12"
                             WidthRequest="100"
                             HorizontalOptions="Start"/>

        <!-- Value skeleton -->
        <controls:SkeletonBox Grid.Row="0"
                             Grid.Column="2"
                             HeightRequest="20"
                             WidthRequest="80"
                             HorizontalOptions="End"/>
    </Grid>

</Border>
