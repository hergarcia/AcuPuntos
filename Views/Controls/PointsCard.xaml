<?xml version="1.0" encoding="utf-8" ?>
<Border
    BackgroundColor="{AppThemeBinding Light={StaticResource Primary},
                                      Dark={StaticResource Gray900}}"
    Padding="20"
    Style="{StaticResource CardFrame}"
    x:Class="AcuPuntos.Views.Controls.PointsCard"
    x:Name="pointsCard"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <Grid ColumnDefinitions="*,Auto">
        <VerticalStackLayout>
            <Label
                FontSize="14"
                Opacity="0.9"
                Text="{Binding Source={x:Reference pointsCard}, Path=Label}"
                TextColor="White" />
            <Label
                FontAttributes="Bold"
                FontSize="32"
                Text="{Binding Source={x:Reference pointsCard}, Path=FormattedPoints}"
                TextColor="White" />
        </VerticalStackLayout>
        <Label
            FontSize="50"
            Grid.Column="1"
            Text="{Binding Source={x:Reference pointsCard}, Path=Icon}"
            VerticalOptions="Center" />
    </Grid>

</Border>
