<?xml version="1.0" encoding="utf-8" ?>
<Border xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
        xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
        x:Class="AcuPuntos.Views.Controls.PointsCard"
        x:Name="pointsCard"
        Style="{StaticResource CardFrame}"
        BackgroundColor="{StaticResource Primary}"
        Padding="20">

    <Grid ColumnDefinitions="*,Auto">
        <VerticalStackLayout>
            <Label Text="{Binding Source={x:Reference pointsCard}, Path=Label}"
                   TextColor="White"
                   FontSize="14"
                   Opacity="0.9"/>
            <Label Text="{Binding Source={x:Reference pointsCard}, Path=FormattedPoints}"
                   TextColor="White"
                   FontSize="32"
                   FontAttributes="Bold"/>
        </VerticalStackLayout>
        <Label Grid.Column="1"
               Text="{Binding Source={x:Reference pointsCard}, Path=Icon}"
               FontSize="50"
               VerticalOptions="Center"/>
    </Grid>

</Border>
