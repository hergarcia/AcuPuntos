<?xml version="1.0" encoding="utf-8" ?>
<Border xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
        xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
        x:Class="AcuPuntos.Views.Controls.StatsCard"
        x:Name="statsCard"
        BackgroundColor="{Binding Source={x:Reference statsCard}, Path=BackgroundColor}"
        Padding="15"
        Style="{StaticResource CardFrame}">

    <VerticalStackLayout Spacing="5">
        <Label Text="{Binding Source={x:Reference statsCard}, Path=Icon}"
               FontSize="30"
               HorizontalOptions="Center"/>
        <Label Text="{Binding Source={x:Reference statsCard}, Path=Label}"
               FontSize="12"
               HorizontalOptions="Center"
               TextColor="{Binding Source={x:Reference statsCard}, Path=LabelColor}"/>
        <Label Text="{Binding Source={x:Reference statsCard}, Path=FormattedValue}"
               FontSize="24"
               FontAttributes="Bold"
               HorizontalOptions="Center"
               TextColor="{Binding Source={x:Reference statsCard}, Path=ValueColor}"/>
    </VerticalStackLayout>

</Border>
