<?xml version="1.0" encoding="utf-8" ?>
<Border xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
        xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
        xmlns:controls="clr-namespace:AcuPuntos.Views.Controls"
        x:Class="AcuPuntos.Views.Controls.CardSkeleton"
        Style="{StaticResource CardFrame}"
        Padding="20">

    <VerticalStackLayout Spacing="12">
        <!-- Header skeleton -->
        <controls:SkeletonBox HeightRequest="20"
                             WidthRequest="120"
                             HorizontalOptions="Start"
                             IsVisible="{Binding IsVisible, Source={RelativeSource AncestorType={x:Type controls:CardSkeleton}}}"/>

        <!-- Content skeleton -->
        <controls:SkeletonBox HeightRequest="16"
                             WidthRequest="200"
                             HorizontalOptions="Start"
                             IsVisible="{Binding IsVisible, Source={RelativeSource AncestorType={x:Type controls:CardSkeleton}}}"/>

        <controls:SkeletonBox HeightRequest="16"
                             WidthRequest="180"
                             HorizontalOptions="Start"
                             IsVisible="{Binding IsVisible, Source={RelativeSource AncestorType={x:Type controls:CardSkeleton}}}"/>

        <!-- Large value skeleton -->
        <controls:SkeletonBox HeightRequest="32"
                             WidthRequest="100"
                             Margin="0,8,0,0"
                             HorizontalOptions="Start"
                             IsVisible="{Binding IsVisible, Source={RelativeSource AncestorType={x:Type controls:CardSkeleton}}}"/>
    </VerticalStackLayout>

</Border>
