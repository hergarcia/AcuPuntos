<?xml version="1.0" encoding="utf-8" ?>
<views:BasePage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:AcuPuntos.Views"
             xmlns:viewmodels="clr-namespace:AcuPuntos.ViewModels"
             xmlns:models="clr-namespace:AcuPuntos.Models"
             xmlns:controls="clr-namespace:AcuPuntos.Views.Controls"
             x:Class="AcuPuntos.Views.RewardsPage"
             x:DataType="viewmodels:RewardsViewModel"
             Title="{Binding Title}"
             BackgroundColor="{StaticResource Light}">

    <Grid>
        <RefreshView Command="{Binding RefreshRewardsCommand}" IsRefreshing="{Binding IsRefreshing}">
        <ScrollView>
            <VerticalStackLayout Spacing="20" Padding="20">

            <!-- Saldo actual -->
            <Grid>
                <Border Style="{StaticResource CardFrame}"
                       BackgroundColor="{StaticResource Primary}"
                       Padding="20"
                       IsVisible="{Binding IsNotBusy}">
                    <Grid ColumnDefinitions="*,Auto">
                        <VerticalStackLayout>
                            <Label Text="Tus puntos disponibles"
                                   TextColor="White"
                                   FontSize="14"
                                   Opacity="0.9"/>
                            <Label Text="{Binding CurrentUser.Points, StringFormat='{0:N0} puntos'}"
                                   TextColor="White"
                                   FontSize="32"
                                   FontAttributes="Bold"/>
                        </VerticalStackLayout>
                        <Label Grid.Column="1"
                               Text="游꾸"
                               FontSize="50"
                               VerticalOptions="Center"/>
                    </Grid>
                </Border>
                <controls:CardSkeleton IsVisible="{Binding IsBusy}" />
            </Grid>

            <!-- B칰squeda -->
            <Border Style="{StaticResource CardFrame}"
                   Padding="15">
                <VerticalStackLayout Spacing="10">
                    <SearchBar Placeholder="Buscar recompensas..."
                               Text="{Binding SearchText}"
                               BackgroundColor="{StaticResource Light}"
                               PlaceholderColor="#999999"/>

                    <!-- Filtro por categor칤a -->
                    <HorizontalStackLayout Spacing="10">
                        <Label Text="Categor칤a:"
                               FontSize="14"
                               TextColor="{StaticResource Gray}"
                               VerticalOptions="Center"/>
                        <Picker ItemsSource="{Binding Categories}"
                                SelectedItem="{Binding SelectedCategory}"
                                BackgroundColor="{StaticResource Light}"
                                HorizontalOptions="FillAndExpand"/>
                    </HorizontalStackLayout>
                </VerticalStackLayout>
            </Border>

            <!-- Lista de recompensas -->
            <Label Text="Recompensas Disponibles"
                   FontSize="20"
                   FontAttributes="Bold"
                   TextColor="{StaticResource Dark}"/>

            <VerticalStackLayout>
                <CollectionView ItemsSource="{Binding FilteredRewards}"
                              SelectionMode="None"
                              IsVisible="{Binding IsNotBusy}">
                    <CollectionView.EmptyView>
                        <controls:EmptyStateView
                            Icon="游댌"
                            Title="No hay recompensas disponibles"/>
                    </CollectionView.EmptyView>
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="models:Reward">
                            <Border Style="{StaticResource CardFrame}"
                                   Padding="15"
                                   Margin="0,0,0,10">
                                <Border.GestureRecognizers>
                                    <TapGestureRecognizer
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.ViewRewardDetailCommand}"
                                        CommandParameter="{Binding .}"/>
                                </Border.GestureRecognizers>
                                <Grid RowDefinitions="Auto,Auto,Auto,Auto"
                                      ColumnDefinitions="Auto,*,Auto">

                                    <!-- Icono -->
                                    <Label Grid.Row="0" Grid.RowSpan="2"
                                           Text="{Binding Icon, FallbackValue='游꾸'}"
                                           FontSize="50"
                                           VerticalOptions="Center"/>

                                    <!-- Nombre y descripci칩n -->
                                    <VerticalStackLayout Grid.Row="0" Grid.Column="1"
                                                       Margin="15,0,0,0">
                                        <Label Text="{Binding Name}"
                                               FontSize="18"
                                               FontAttributes="Bold"
                                               TextColor="{StaticResource Dark}"/>
                                        <Label Text="{Binding Description}"
                                               FontSize="14"
                                               TextColor="{StaticResource Gray}"
                                               LineBreakMode="TailTruncation"
                                               MaxLines="2"/>
                                    </VerticalStackLayout>

                                    <!-- Costo en puntos -->
                                    <Border Grid.Row="0" Grid.Column="2"
                                           BackgroundColor="{StaticResource Primary}"
                                           Padding="10,5"
                                           StrokeShape="RoundRectangle 15"
                                           VerticalOptions="Start">
                                        <Label Text="{Binding PointsCost, StringFormat='{0:N0} pts'}"
                                               TextColor="White"
                                               FontSize="14"
                                               FontAttributes="Bold"/>
                                    </Border>

                                    <!-- Categor칤a -->
                                    <Border Grid.Row="1" Grid.Column="1"
                                           Grid.ColumnSpan="2"
                                           Padding="8,4"
                                           StrokeShape="RoundRectangle 10"
                                           BackgroundColor="LightBlue"
                                           HorizontalOptions="Start"
                                           Margin="15,5,0,0">
                                        <Label Text="{Binding Category}"
                                               TextColor="White"
                                               FontSize="12"
                                               FontAttributes="Bold"/>
                                    </Border>

                                    <!-- Bot칩n de canje -->
                                    <Button Grid.Row="3" Grid.ColumnSpan="3"
                                            Text="Canjear"
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.RedeemRewardCommand}"
                                            CommandParameter="{Binding .}"
                                            IsEnabled="{Binding CanRedeem}"
                                            BackgroundColor="{StaticResource Primary}"
                                            TextColor="White"
                                            FontAttributes="Bold"
                                            HeightRequest="45"
                                            CornerRadius="22"
                                            Margin="0,10,0,0">
                                        <Button.Triggers>
                                            <DataTrigger TargetType="Button"
                                                       Binding="{Binding CanRedeem}"
                                                       Value="False">
                                                <Setter Property="BackgroundColor" Value="{StaticResource Gray200}"/>
                                                <Setter Property="TextColor" Value="{StaticResource Gray}"/>
                                                <Setter Property="Text" Value="{Binding DisabledReason}"/>
                                            </DataTrigger>
                                        </Button.Triggers>
                                    </Button>

                                </Grid>
                            </Border>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
                
                <!-- Skeleton Loading -->
                <controls:SkeletonList IsVisible="{Binding IsBusy}" />
            </VerticalStackLayout>

            </VerticalStackLayout>
        </ScrollView>
        </RefreshView>


    </Grid>
</views:BasePage>
