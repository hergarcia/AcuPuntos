<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AcuPuntos.Views.RewardsPage"
             Title="{Binding Title}"
             BackgroundColor="#F5F5F5">

    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="20">

            <!-- Saldo actual -->
            <Frame Style="{StaticResource CardFrame}"
                   BackgroundColor="#2ECC71"
                   Padding="20">
                <Grid ColumnDefinitions="*,Auto">
                    <VerticalStackLayout>
                        <Label Text="Tus puntos disponibles"
                               TextColor="White"
                               FontSize="14"
                               Opacity="0.9"/>
                        <Label Text="{Binding CurrentUser.Points, StringFormat='{0:N0} puntos'}"
                               TextColor="White"
                               FontSize="32"
                               FontAttributes="Bold"/>
                    </VerticalStackLayout>
                    <Label Grid.Column="1"
                           Text="游꾸"
                           FontSize="50"
                           VerticalOptions="Center"/>
                </Grid>
            </Frame>

            <!-- B칰squeda -->
            <Frame Style="{StaticResource CardFrame}"
                   Padding="15">
                <VerticalStackLayout Spacing="10">
                    <SearchBar Placeholder="Buscar recompensas..."
                               Text="{Binding SearchText}"
                               BackgroundColor="#F5F5F5"
                               PlaceholderColor="#999999"/>

                    <!-- Filtro por categor칤a -->
                    <HorizontalStackLayout Spacing="10">
                        <Label Text="Categor칤a:"
                               FontSize="14"
                               TextColor="#666666"
                               VerticalOptions="Center"/>
                        <Picker ItemsSource="{Binding Categories}"
                                SelectedItem="{Binding SelectedCategory}"
                                BackgroundColor="#F5F5F5"
                                HorizontalOptions="FillAndExpand"/>
                    </HorizontalStackLayout>
                </VerticalStackLayout>
            </Frame>

            <!-- Lista de recompensas -->
            <Label Text="Recompensas Disponibles"
                   FontSize="20"
                   FontAttributes="Bold"
                   TextColor="#333333"/>

            <CollectionView ItemsSource="{Binding FilteredRewards}"
                          SelectionMode="None">
                <CollectionView.EmptyView>
                    <Frame Style="{StaticResource CardFrame}"
                           Padding="40">
                        <VerticalStackLayout Spacing="10">
                            <Label Text="游댌"
                                   FontSize="50"
                                   HorizontalOptions="Center"/>
                            <Label Text="No hay recompensas disponibles"
                                   FontSize="16"
                                   TextColor="#666666"
                                   HorizontalOptions="Center"/>
                        </VerticalStackLayout>
                    </Frame>
                </CollectionView.EmptyView>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Style="{StaticResource CardFrame}"
                               Padding="15"
                               Margin="0,0,0,10">
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.ViewRewardDetailCommand}"
                                    CommandParameter="{Binding .}"/>
                            </Frame.GestureRecognizers>
                            <Grid RowDefinitions="Auto,Auto,Auto,Auto"
                                  ColumnDefinitions="Auto,*,Auto">

                                <!-- Icono -->
                                <Label Grid.Row="0" Grid.RowSpan="2"
                                       Text="{Binding Icon, FallbackValue='游꾸'}"
                                       FontSize="50"
                                       VerticalOptions="Center"/>

                                <!-- Nombre y descripci칩n -->
                                <VerticalStackLayout Grid.Row="0" Grid.Column="1"
                                                   Margin="15,0,0,0">
                                    <Label Text="{Binding Name}"
                                           FontSize="18"
                                           FontAttributes="Bold"
                                           TextColor="#333333"/>
                                    <Label Text="{Binding Description}"
                                           FontSize="14"
                                           TextColor="#666666"
                                           LineBreakMode="TailTruncation"
                                           MaxLines="2"/>
                                </VerticalStackLayout>

                                <!-- Costo en puntos -->
                                <Frame Grid.Row="0" Grid.Column="2"
                                       BackgroundColor="#2ECC71"
                                       Padding="10,5"
                                       CornerRadius="15"
                                       VerticalOptions="Start">
                                    <Label Text="{Binding PointsCost, StringFormat='{0:N0} pts'}"
                                           TextColor="White"
                                           FontSize="14"
                                           FontAttributes="Bold"/>
                                </Frame>

                                <!-- Categor칤a -->
                                <Frame Grid.Row="1" Grid.Column="1"
                                       Grid.ColumnSpan="2"
                                       Padding="8,4"
                                       CornerRadius="10"
                                       BackgroundColor="LightBlue"
                                       HorizontalOptions="Start"
                                       Margin="15,5,0,0">
                                    <Label Text="{Binding Category}"
                                           TextColor="White"
                                           FontSize="12"
                                           FontAttributes="Bold"/>
                                </Frame>

                                <!-- Bot칩n de canje -->
                                <Button Grid.Row="3" Grid.ColumnSpan="3"
                                        Text="{Binding DisabledReason, FallbackValue='Canjear'}"
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.RedeemRewardCommand}"
                                        CommandParameter="{Binding .}"
                                        IsEnabled="{Binding CanRedeem}"
                                        BackgroundColor="#2ECC71"
                                        TextColor="White"
                                        FontAttributes="Bold"
                                        HeightRequest="45"
                                        CornerRadius="22"
                                        Margin="0,10,0,0">
                                    <Button.Triggers>
                                        <DataTrigger TargetType="Button"
                                                   Binding="{Binding CanRedeem}"
                                                   Value="False">
                                            <Setter Property="BackgroundColor" Value="#E0E0E0"/>
                                            <Setter Property="TextColor" Value="#999999"/>
                                        </DataTrigger>
                                    </Button.Triggers>
                                </Button>

                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- Bot칩n de refrescar -->
            <Button Text="游댃 Actualizar"
                    Command="{Binding RefreshRewardsCommand}"
                    BackgroundColor="#3498DB"
                    TextColor="White"
                    FontAttributes="Bold"
                    HeightRequest="50"
                    CornerRadius="25"
                    Margin="0,10,0,20"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
