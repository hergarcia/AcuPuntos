<?xml version="1.0" encoding="UTF-8" ?>
<Application
    x:Class="AcuPuntos.App"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:converters="clr-namespace:AcuPuntos.Converters"
    xmlns:local="clr-namespace:AcuPuntos"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!--  Converters  -->
            <toolkit:InvertedBoolConverter x:Key="InvertedBoolConverter" />
            <converters:NullToBoolConverter x:Key="NullToBoolConverter" />
            <converters:StringToBoolConverter x:Key="StringToBoolConverter" />
            <converters:SelectedColorConverter x:Key="SelectedColorConverter" />
            <converters:UserSelectionConverter x:Key="UserSelectionConverter" />
            <converters:TransactionColorConverter x:Key="TransactionColorConverter" />
            <converters:TransactionIconConverter x:Key="TransactionIconConverter" />
            <converters:TransactionTypeConverter x:Key="TransactionTypeConverter" />
            <converters:IntToBoolConverter x:Key="IntToBoolConverter" />
            <converters:StatusToColorConverter x:Key="StatusToColorConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
