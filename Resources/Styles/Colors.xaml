<?xml version="1.0" encoding="UTF-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!--  Note: For Android please see also Platforms\Android\Resources\values\colors.xml  -->

    <!--  Paleta Modern Fintech - Indigo & Slate  -->
    <!--  Primary: Indigo  -->
    <Color x:Key="Primary">#4F46E5</Color>
    <Color x:Key="PrimaryDark">#3730A3</Color>
    <Color x:Key="PrimaryLight">#818CF8</Color>
    <Color x:Key="PrimaryContainer">#E0E7FF</Color>
    <Color x:Key="PrimaryContainerDark">#312E81</Color>
    <Color x:Key="SurfaceAlpha">#CCFFFFFF</Color>
    <!--  80% White for Glassmorphism  -->

    <!--  Secondary: Sky/Cyan for accents  -->
    <Color x:Key="Secondary">#0EA5E9</Color>
    <Color x:Key="SecondaryDark">#0284C7</Color>
    <Color x:Key="SecondaryLight">#38BDF8</Color>

    <!--  Functional Colors  -->
    <Color x:Key="Success">#10B981</Color>
    <Color x:Key="SuccessDark">#047857</Color>
    <Color x:Key="SuccessLight">#D1FAE5</Color>

    <Color x:Key="Danger">#EF4444</Color>
    <Color x:Key="DangerDark">#B91C1C</Color>
    <Color x:Key="DangerLight">#FEE2E2</Color>

    <Color x:Key="Warning">#F59E0B</Color>
    <Color x:Key="WarningDark">#B45309</Color>
    <Color x:Key="WarningLight">#FEF3C7</Color>

    <Color x:Key="Info">#3B82F6</Color>
    <Color x:Key="InfoDark">#1E40AF</Color>
    <Color x:Key="InfoLight">#DBEAFE</Color>

    <!--  Backgrounds & Surfaces  -->
    <Color x:Key="Background">#F1F5F9</Color>
    <!--  Slate 100  -->
    <Color x:Key="Surface">#FFFFFF</Color>

    <!--  Neutrals (Slate Scale)  -->
    <Color x:Key="Light">#F8FAFC</Color>
    <Color x:Key="Dark">#1E293B</Color>
    <!--  Slate 800  -->
    <Color x:Key="Gray">#64748B</Color>
    <!--  Slate 500  -->
    <Color x:Key="White">White</Color>
    <Color x:Key="Black">Black</Color>

    <!--  Text Colors  -->
    <Color x:Key="PrimaryDarkText">#0F172A</Color>
    <!--  Slate 900  -->
    <Color x:Key="SecondaryDarkText">#334155</Color>
    <!--  Slate 700  -->
    <Color x:Key="TertiaryText">#64748B</Color>
    <!--  Slate 500  -->

    <!--  Additional Accents  -->
    <Color x:Key="Tertiary">#8B5CF6</Color>
    <!--  Violet  -->
    <Color x:Key="Magenta">#EC4899</Color>
    <Color x:Key="MidnightBlue">#1E3A8A</Color>
    <Color x:Key="OffBlack">#0F172A</Color>

    <!--  Slate Scale for Grays  -->
    <Color x:Key="Gray100">#F1F5F9</Color>
    <Color x:Key="Gray200">#E2E8F0</Color>
    <Color x:Key="Gray300">#CBD5E1</Color>
    <Color x:Key="Gray400">#94A3B8</Color>
    <Color x:Key="Gray500">#64748B</Color>
    <Color x:Key="Gray600">#475569</Color>
    <Color x:Key="Gray700">#334155</Color>
    <Color x:Key="Gray800">#1E293B</Color>
    <Color x:Key="Gray900">#0F172A</Color>
    <Color x:Key="Gray950">#020617</Color>

    <!--  Brushes  -->
    <SolidColorBrush Color="{StaticResource Primary}" x:Key="PrimaryBrush" />
    <SolidColorBrush Color="{StaticResource Secondary}" x:Key="SecondaryBrush" />
    <SolidColorBrush Color="{StaticResource Tertiary}" x:Key="TertiaryBrush" />
    <SolidColorBrush Color="{StaticResource White}" x:Key="WhiteBrush" />
    <SolidColorBrush Color="{StaticResource Black}" x:Key="BlackBrush" />
    <SolidColorBrush Color="{StaticResource Background}" x:Key="BackgroundBrush" />

    <SolidColorBrush Color="{StaticResource Gray100}" x:Key="Gray100Brush" />
    <SolidColorBrush Color="{StaticResource Gray200}" x:Key="Gray200Brush" />
    <SolidColorBrush Color="{StaticResource Gray300}" x:Key="Gray300Brush" />
    <SolidColorBrush Color="{StaticResource Gray400}" x:Key="Gray400Brush" />
    <SolidColorBrush Color="{StaticResource Gray500}" x:Key="Gray500Brush" />
    <SolidColorBrush Color="{StaticResource Gray600}" x:Key="Gray600Brush" />
    <SolidColorBrush Color="{StaticResource Gray900}" x:Key="Gray900Brush" />
    <SolidColorBrush Color="{StaticResource Gray950}" x:Key="Gray950Brush" />
</ResourceDictionary>